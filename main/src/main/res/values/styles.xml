<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar"/>

    <style name="LaunchApp" parent="AppTheme">
        <item name="android:background">@drawable/startup</item>

    </style>

    <style name="WindowAnimator" parent="Theme.AppCompat.NoActionBar">
        <item name="android:activityOpenEnterAnimation">@anim/layout_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/layout_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/layout_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/layout_right_out</item>
    </style>


    <style name="NavBar">
        <item name="android:background">@color/nav_bar</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:height">44dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="Text11Black">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="Text12Black">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="Text13Black">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="Text14Black">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="Text14BoldBlack">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="Text16Black">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000</item>
    </style>


    <style name="SmallExplainText">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="NavButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/nav_button_text</item>
    </style>

</resources>
